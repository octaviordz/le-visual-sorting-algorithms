<UserControl x:Class="VisualSortingAlgorithms.Wpf.GraphControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisualSortingAlgorithms.Wpf"
             xmlns:d3="clr-namespace:InteractiveDataDisplay.WPF;assembly=InteractiveDataDisplay.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid HorizontalAlignment="Stretch">
        <d3:Chart Name="chart" HorizontalAlignment="Stretch" LegendVisibility="Hidden">
            <Grid>
                <d3:BarGraph x:Name="mainGraph" Stroke="LightBlue" Color="LightBlue" StrokeThickness="1" HorizontalAlignment="Stretch"/>
                <d3:BarGraph x:Name="setGraph" Stroke="Blue" Color="Blue" StrokeThickness="1" HorizontalAlignment="Stretch"/>
                <d3:BarGraph x:Name="swapGraph" Stroke="Red" Color="Red" StrokeThickness="1" HorizontalAlignment="Stretch"/>
                <d3:BarGraph x:Name="comperGraph" Stroke="Orange" Color="Orange" StrokeThickness="1" HorizontalAlignment="Stretch"/>
            </Grid>
        </d3:Chart>
    </Grid>
</UserControl>
